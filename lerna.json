{
  "packages": ["packages/*"],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "npm",
  "publish": {
    "ignoreChanges": ["ignored-file"],
    "message": "build(release): publish",
    "registry": "https://npm.pkg.github.com"
  },
  "bootstrap": {
    "ignore": "component-*",
    "npmClientArgs": ["--no-package-lock"]
  }
}
